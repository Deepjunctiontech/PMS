<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_both"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.junctiontech.project.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybox"
        android:orientation="vertical"
        >
        <!--android:layout_centerInParent="true"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="13">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="PID"
                android:textColor="@color/actionbarcolor"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/divider"
                android:gravity="center"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="TID"
                android:textColor="@color/actionbarcolor"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/divider"
                android:gravity="center"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Expense"
                android:textColor="@color/actionbarcolor"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/divider"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Receipt"
                android:textColor="@color/actionbarcolor"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/divider"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Image"
                android:textColor="@color/actionbarcolor"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black"></View>


        <ListView
            android:id="@+id/lv_for_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>


    </LinearLayout>

    <include
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        />

</RelativeLayout>
